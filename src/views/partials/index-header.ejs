<style>
    /* The device with borders */
    body {
        font-family: 'Roboto Mono', monospace;
    }

    .smartphone {
        position: relative;
        width: 360px;
        height: 640px;
        margin: auto;
        border: 3px black solid;
        border-top-width: 60px;
        border-bottom-width: 60px;
        border-radius: 36px;
    }

    /* The horizontal line on the top of the device */
    .smartphone:before {
        content: '';
        display: block;
        width: 60px;
        height: 5px;
        position: absolute;
        top: -30px;
        left: 50%;
        transform: translate(-50%, -50%);
        background: #333;
        border-radius: 10px;
    }

    /* The circle on the bottom of the device */
    .smartphone:after {
        content: '';
        display: block;
        width: 35px;
        height: 35px;
        position: absolute;
        left: 50%;
        bottom: -65px;
        transform: translate(-50%, -50%);
        background: #333;
        border-radius: 50%;
    }

    /* The screen (or content) of the device */
    .smartphone .content {
        width: 360px;
        height: 640px;
        background: white;
    }

    .message-container {
        width: -webkit-fill-available;
        padding: 0 10px;
        height: fit-content;
        display: inline-block;
    }

    .right-message-bubble {
        float: right;
        padding: 10px;
        max-width: 150px;
        word-break: break-word;
        border: 1px solid;
        margin: 10px;
        border-radius: 5px;
        box-shadow: 1px 1px;
    }

    .left-message-bubble {
        float: left;
        display: grid;
        grid-template-columns: 80% 20%;
        padding: 10px;
        max-width: 200px;
        word-break: break-word;
        border: 1px solid #ffc107;
        margin: 10px;
        border-radius: 5px;
        box-shadow: 1px 1px #ffc107;
    }

    .text-inp {
        width: -webkit-fill-available;
        position: absolute;
        bottom: 0px;
        padding: 10px;
        font-size: 18px;
        border: none;
        background: #f2f2f2;
        height: 30px;
    }

    .btn-send {
        position: absolute;
        right: 0;
        bottom: 0;
        padding: 10px;
        border-radius: 50%;
        border: none;
        margin: 7px;
        background: #25252d;
        margin-right: 8px;
        box-shadow: 0px 0px 10px 0px #f2f2f2;
        color: white;
    }

    .btn-copy {
        border: none;
        background: transparent;
        padding: 10px;
        margin: 5px;
    }

    .logo {
        padding: 10px;
        transition: all 0.1s ease;
        -moz-transition: all 0.1s ease;
        -o-transition: all 0.1s ease;
        -ms-transition: all 0.1s ease;
    }

    .navbar {
        padding: 10px;
        padding-top: 0px;
        border-bottom: 1px solid;
    }

    .hidden-text {
        color: #f7f7f7;
        transition: color 1s ease;
    }

    .hidden-text:hover {
        color: #000;
    }

    #view-port {
        overflow-y: scroll;
        height: 80%;
    }

    .time {
        position: absolute;
        bottom: 50px;
        margin: auto;
        padding: 5px;
        overflow-x: scroll;
        white-space: nowrap;
        width: -webkit-fill-available;
        border-top: 1px solid #f7f7f7;
        background-color: white;
    }

    .btn-time {
        cursor: pointer;
        border: 1px solid;
        padding: 5px;
        display: inline-block;
        border-radius: 3px;
        box-shadow: 1px 1px;
    }

    .btn-time:hover {
        border: 1px solid#ffc107;
        box-shadow: 1px 1px #ffc107;
    }

    .footer {
        text-align: center;
        margin: 20px;
    }

    ::placeholder {
        font-family: 'Roboto Mono', monospace;
    }

    /* width */
    ::-webkit-scrollbar {
        width: 5px;
        height: 5px;
    }

    /* Track */
    ::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    /* Handle */
    ::-webkit-scrollbar-thumb {
        background: lightgray;
    }

    /* Handle on hover */
    ::-webkit-scrollbar-thumb:hover {
        background: lightslategray;
    }
</style>